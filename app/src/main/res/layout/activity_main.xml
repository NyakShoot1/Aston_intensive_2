<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/arrowTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/arrow"
        app:layout_constraintBottom_toTopOf="@id/rainbowDrumView"
        app:layout_constraintEnd_toEndOf="@+id/rainbowDrumView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ru.nyakshoot.aston_intensive_2.views.RainbowDrumView
        android:id="@+id/rainbowDrumView"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toBottomOf="@id/arrowTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/frameLayout"
        />

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="32dp"
        android:layout_height="180dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rainbowDrumView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.100">

        <SeekBar
            android:id="@+id/sizeSeekBar"
            android:layout_width="180dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:max="100"
            android:progress="50"
            android:rotation="270" />

    </FrameLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:contentDescription="@string/image"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/rainbowDrumView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ru.nyakshoot.aston_intensive_2.views.CustomTextView
        android:id="@+id/customTextView"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/rainbowDrumView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/resetButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rainbowDrumView" />

</androidx.constraintlayout.widget.ConstraintLayout>